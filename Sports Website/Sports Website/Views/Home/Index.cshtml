@{
    ViewData["Title"] = "Home Page";
}

@using Models
@model List<Tournaments>

<style>

    .profile-img {
        width: 100px;
    }
</style>

<div class="text-center">
    <h1 class="display-4">Welcome to Sports Website</h1>
</div>

<h1>Tournaments</h1>


@Html.ActionLink("Add New Tournament", "Create", "Home", null, new { @class = "btn btn-primary m-3" })

<table class="table">
    <thead>
        <tr>
            <th scope="col">NO</th>
            <th scope="col">Team Logo</th>
            <th scope="col">Tournament Name</th>
            <th scope="col">About tournament</th>
            <th scope="col">Operations</th>
        </tr>
    </thead>
    <tbody>
        @{int i = 1;}
        @foreach (var tournament in Model)
        {
            <tr>

                <td>
                    @i
                </td>
                @{ i++;}

                <td>
                    <img class="profile-img" src="~/Files/images/@tournament.LogoUrl" alt="Logo" />
                </td>

                <td>@tournament.Name</td>

                <td>@tournament.Description</td>

                

                <td>
                    @Html.ActionLink("Edit", "Edit", "Home", routeValues: new { @tournamentID = tournament.ID }, new { @class = "btn btn-primary me-2" })
                    @Html.ActionLink("Delete", "Delete", "Home", routeValues: new { @tournamentID = tournament.ID }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }


    </tbody>
</table>


